<link rel="stylesheet" href="/styles/main.css">

</head>

<%- include('./partials/head' , { title: 'TouchTribe Webshop' }) %>

<%- include('./partials/mobile-navbar') %>

<main>
    <body>
        <div class="progress"></div>
        <section class="highlighted-product">
            <% products.slice(0, 1).forEach(product => { %>
                <section class="h-product-img">
                    <picture>
                        <source srcset="/assets/IMG_test.webp" type="image/webp">
                        <source srcset="/assets/IMG_test.avif" type="image/avif">
                        <img src="/assets/IMG_test.jpeg" loading="lazy" alt="<%= product.name %>">
                    </picture>
                </section>
                <section class="h-product-info">
                    <div class="h-title-and-price">
                        <h2><%= product.name %></h2>
                        <span>25 tokens</span>
                    </div>
                    <div class="h-description">
                        <p><%= product.description %></p>
                    </div>
                    <div class="size-and-add">
                        <table>
                            <tbody>
                                <tr>
                                    <th><button onclick="selectSize('...')">XS</button></th>
                                    <th><button onclick="selectSize('...')">S</button></th>
                                    <th><button onclick="selectSize('...')">M</button></th>
                                    <th><button onclick="selectSize('...')">L</button></th>
                                </tr>
                            </tbody>
                        </table>
                        <button class="cartBtn" onclick="addCart()" aria-label="Add to shopping cart" role="button">
                            <svg width="25" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M6.29977 5H21L19 12H7.37671M20 16H8L6 3H3M9 20C9 20.5523 8.55228 21 8 21C7.44772 21 7 20.5523 7 20C7 19.4477 7.44772 19 8 19C8.55228 19 9 19.4477 9 20ZM20 20C20 20.5523 19.5523 21 19 21C18.4477 21 18 20.5523 18 20C18 19.4477 18.4477 19 19 19C19.5523 19 20 19.4477 20 20Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </button>
                    </div>
                    <section class="more-products-cta">
                        <a class="tp-to-product" href="#products">
                        <button class="moreProductsBtn" aria-label="See more products" role="button">
                            <svg width="15" height="15" viewBox="0 0 12 15" fill="" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M0.0629883 3.17131L1.93707 0.828705L6.00003 4.07801L10.063 0.828705L11.9371 3.17131L6.00003 7.92095L0.0629883 3.17131ZM0.0629883 10.1713L1.93707 7.8287L6.00003 11.078L10.063 7.8287L11.9371 10.1713L6.00003 14.9209L0.0629883 10.1713Z" fill="white"/>
                            </svg>
                        </button>
                        <p >Bekijk meer producten</p>
                        </a>
                    </section>
                </section>
            <%})%>
        </section>

        <section class="products" id="products">
            <section class="products-container">
                <% products.slice(1).forEach(product => { %>
            <article class="product">
                <section class="product-img">
                    <picture>
                        <source srcset="/assets/IMG_test2.webp" type="image/webp">
                        <source srcset="/assets/IMG_test2.avif" type="image/avif">
                        <img src="/assets/IMG_test2.jpeg" alt="" loading="lazy" alt="<%= product.name %>" width="500">
                    </picture>
                </section>
                <section class="product-info">
                    <div class="title-and-price">
                        <h2><%= product.name %></h2>
                        <span>25 tokens</span>
                    </div>
                    <div class="product-description">
                        <p><%= product.description %></p>
                    </div>
                    <div class="size-and-add">
                        <table class="product-sizes">
                            <tbody>
                                <tr>
                                    <th>XS</th>
                                    <th>S</th>
                                    <th>M</th>
                                    <th>L</th>
                                </tr>
                            </tbody>
                        </table>
                        <div class="add-product">
                            <button class="cartBtn" onclick="addCart()" aria-label="Add to shopping cart" role="button">
                                <svg width="25" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6.29977 5H21L19 12H7.37671M20 16H8L6 3H3M9 20C9 20.5523 8.55228 21 8 21C7.44772 21 7 20.5523 7 20C7 19.4477 7.44772 19 8 19C8.55228 19 9 19.4477 9 20ZM20 20C20 20.5523 19.5523 21 19 21C18.4477 21 18 20.5523 18 20C18 19.4477 18.4477 19 19 19C19.5523 19 20 19.4477 20 20Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                </section>
            </article>
            <%})%>
        </section>
        </section>
    </body>
</main>

<%- include('./partials/foot') %>